{{#if updateQuestionForm}}
<div class="well edit-form">
  <h3>edit the question:</h3>
    <form>
      <div class="form-group">
        <label for="content">a question:</label>
        {{input value=content id="content" placeholder=question.content}}
      </div>
      <div class="form-group">
        <label for="author">your name:</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>
      <div class="form-group">
        <label for="notes">your notes:</label>
        {{input value=notes id="notes" placeholder=question.notes}}
      </div>

      <button class="btn btn-primary"{{action 'update' question}}>save</button>

      <button class="btn btn-danger"{{action 'cancelEdit'}}>cancel</button>

    </form>
  </div>
  {{else}}
    <button class="edit-button btn btn-primary"{{action 'updateQuestionForm'}}>edit the question</button>
  {{/if}}
